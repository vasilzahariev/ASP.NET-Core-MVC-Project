@using UltimateMovies.ViewModels.Movies
@model SuggestMovieInputModel

@{
    ViewData["Title"] = "Suggest A Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Suggest A Movie</h1>


<div class="row">
    <div class="col-md-10">
        <form class="mx-auto half-width col-5" action="/Movies/Suggest" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IMDbUrl" class="control-label"></label>
                <input asp-for="IMDbUrl" class="form-control" />
                <span asp-validation-for="IMDbUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Suggest" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
