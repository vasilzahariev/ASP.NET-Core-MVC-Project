@using UltimateMovies.ViewModels.Movies
@model WatchMovieViewModel

@{
    ViewData["Title"] = "Watch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 50px">
    <h1 class="text-center text-primary">@Model.Name</h1>
    <div style="margin-top: 50px">
        <iframe width="700" height="400" src="@Model.MovieUrl" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen class="d-block" style="margin: 0 auto;"></iframe>
    </div>
</div>

