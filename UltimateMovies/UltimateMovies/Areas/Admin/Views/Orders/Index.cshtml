@using UltimateMovies.Areas.Admin.ViewModels
@model OrdersList

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row text-primary">
    <div class="col-md-6 shadow-lg">
        <h4 class="text-center" style="margin-bottom: 50px">Unprocessed Orders</h4>
        <div class="container" style="font-size: 14px">
            <table class="table table-hover text-center">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-lg-1">
                            Id
                        </th>
                        <th scope="col" class="col-lg-3">
                            Order Date
                        </th>
                        <th scope="col" class="col-lg-2">
                            Delivery Type
                        </th>
                        <th scope="col" class="col-lg-2">
                            Payment Type
                        </th>
                        <th scope="col" class="col-lg-4"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UnprocessedOrders)
                    {
                        <tr class="row">
                            <th class="col-lg-1">@item.Id</th>
                            <th class="col-lg-3">@item.OrderDate.ToString()</th>
                            <th class="col-lg-2">@item.DeliveryType.ToString()</th>
                            @if (item.PaymentType == PaymentType.CashOnDelivery)
                            {
                                <th class="col-lg-2">Cash</th>
                            }
                            else
                            {
                                <th class="col-lg-2">@item.PaymentType.ToString()</th>
                            }
                            <th class="col-lg-4">
                                <a href="/Admin/Orders/ProcessOrder/@item.Id" class="btn btn-success" style="font-size: 0.9rem">Process</a>
                                <a href="/Admin/Orders/Details/@item.Id" class="btn btn-info" style="font-size: 0.9rem">Details</a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6 shadow-lg">
        <h4 class="text-center" style="margin-bottom: 50px">Processed Orders</h4>
        <div class="container" style="font-size: 14px">
            <table class="table table-hover text-center">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-lg-1">
                            Id
                        </th>
                        <th scope="col" class="col-lg-3">
                            Procesed Date
                        </th>
                        <th scope="col" class="col-lg-2">
                            Delivery Type
                        </th>
                        <th scope="col" class="col-lg-2">
                            Payment Type
                        </th>
                        <th scope="col" class="col-lg-4"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProcessedOrders)
                    {
                        <tr class="row">
                            <th class="col-lg-1">@item.Id</th>
                            <th class="col-lg-3">@item.ProcesedDate.ToString()</th>
                            <th class="col-lg-2">@item.DeliveryType.ToString()</th>
                            @if (item.PaymentType == PaymentType.CashOnDelivery)
                            {
                                <th class="col-lg-2">Cash</th>
                            }
                            else
                            {
                                <th class="col-lg-2">@item.PaymentType.ToString()</th>
                            }
                            <th class="col-lg-4">
                                <a href="/Admin/Orders/DeliverOrder/@item.Id" class="btn btn-success" style="font-size: 0.9rem">Deliver</a>
                                <a href="/Admin/Orders/Details/@item.Id" class="btn btn-info" style="font-size: 0.9rem">Details</a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
